<%= error_messages_for 'user' %>

<table>
<p>
<label>Userid (screen name) </label>
<%= text_field 'user', 'name'  %>
</p>

<p>
<label>Full name (real) </label>
<%= text_field 'user', 'fullname'  %>
</p>

<p>
<label>Email Address </label>
<%= text_field 'user', 'email'  %>
</p>

<% if not @self_reg -%>
<p>
<label>Role</label>
<%= collection_select 'user', 'role_id', @roles, :id, :name %>
</p>

<p>
<label>Registration Confirmation</label>
<%= check_box 'user', 'self_reg_confirmation_required' %>
</p>
<p>
<label>Start Path</label>
<%= text_field 'user', 'start_path' %>
</p>
<% end -%>

<% if @password_change -%>
<p>
<label>Old Password</label>
<%= password_field 'user', 'old_password' %>
</p>
<% end -%>

<p>
<label><% if @password_change then %> New <% end %>Password</label>
<%= password_field 'user', 'clear_password' %>
</p>

<p>
<label>Confirm Password</label>
<%= password_field 'user', 'confirm_password' %>
</p>
</table>
