<% if @item.tag_list.include?(tag) %>
	<li class="set">
		<%= link_to_function("REMOVE", "delete_tag(this, '%s')" % delete_tag_item_url(@item), :class => "delete") %>
		<%= link_to tag, topic_tags_url(@topic, tag) %>
	</li>
<% else %>
	<li>
		<%= link_to_function("ADD", "add_tag(this, '%s')" % add_tag_item_url(@item), :class => "add") %>
		<%= link_to tag, topic_tags_url(@topic, tag) %>
	</li>
<% end %>