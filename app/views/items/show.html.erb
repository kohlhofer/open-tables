<h1>Item: <%= @page_title = h(@item.title) %> in <%= link_to h(@topic.title), @topic %></h1>

<div class="main">
	<%= render :partial => @item.type.to_s.downcase, :locals => {:item => @item } %>
	<% @item.topics.each do |topic| %>
	  <%= link_to topic.title, topic %>
	<% end %>
</div>

<div class="second">
	<h2>tags</h2>
	<ul class="tags">
	  <% @tags.each do |tag| %>
	    <li><%= link_to_function(tag, "add_tag('%s')" % tag, 
	      :class => (@item.tags.include?(tag) ? "set" : "")) if logged_in? %>
	      <%= link_to tag, { :controller => :items, :action => :index, :tags => tag, :topic_id => @topic.id } %></li>
	  <% end %>
	</ul>
	<% form_tag({:action => :add_tag, :id => @item.id }, :method => :put) do -%>
	  <%= text_field_tag :tag %>
	  <%= submit_tag 'add tag', :name => nil %>
	<% end -%>
</div>
<% if logged_in? %>
rejected/relevant:
<%= link_to_function 'relevant', "add_tag('relevant')" %>
<%= link_to_function 'rejected', "add_tag('rejected')" %>
<% end %>

<div class="clearThis"> </div>