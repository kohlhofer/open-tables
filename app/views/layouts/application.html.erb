      <%= link_to 'Login', login_url %>
      <%= link_to 'SignUp', signup_url %>
    <% else %>
      <%= link_to 'Admin', admin_url %>
    <% end %>
    </ul>
    <a href="/" title="back to home-page" id="logo">opentables</a>
  </div>


  


<div id="wrap" class="mainSize">
  <% flash.each do |type, message| %>
  <div class="<%= type %>">
    <%= message %>
  </div>
  <% end %>

  <%= yield %>




  <div id="footer">
  <ul>
    <li><a href="#logo">^ top</a></li>
    <li><a href="/">home</a></li>
  </ul>  
  <%= Goldberg.settings.footer_message %>
  </div>
</div>
